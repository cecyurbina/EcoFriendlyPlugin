{
  // Required
  "manifest_version": 2,
  "name": "Asistente de compras ecol√≥gico",
  "version": "2.0",

  // Recommended
  "description": "Plugin que muestra el impacto ecologico de productos",
  "icons": {},

  "browser_action": {
    "default_title": "EcoPlugin"
  },

  // Optional
  "author": "Sandra Cecilia Urbina Coronado",
  "background": {
    "scripts": ["background.js"/*, "content.js"*/],
    "persistent": false
  },
  "content_scripts": [ 
    {
      "all_frames": true,
      "js": [ "js/jquery-2.1.0.min.js", "js/bootstrap.min.js"],
      "matches": ["http://www1.soriana.com/*", "http://www.hebadomicilio.com.mx/", "http://www.walmart.com.mx/*"]

    }
  ],
  "permissions": ["activeTab","tabs", "http://*/*","<all_urls>"]
}
